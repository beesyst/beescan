<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>BeeScan Report</title>
    {% if report_theme == "dark" %}
    <link rel="stylesheet" href="../templates/css/style_dark.css">
    {% else %}
    <link rel="stylesheet" href="../templates/css/style_light.css">
    {% endif %}
    {# Глобальный CSS для Details/Show more #}
    <style>
        .show-more-btn {
            padding: 2px 8px;
            background: #191919;
            color: #aaa;
            border: 1px solid #333;
            border-radius: 5px;
            cursor: pointer;
            font-size: 12px;
            margin-bottom: 2px;
        }

        .show-more-btn:hover {
            background: #272727;
        }

        .details-cell {
            min-width: 320px;
            max-width: 420px;
            width: 420px;
            vertical-align: top;
            box-sizing: border-box;
        }
    </style>
    <script>
        function toggleDetails(btn) {
            var block = btn.nextElementSibling;
            if (block.style.display === "none" || block.style.display === "") {
                block.style.display = "inline";
                btn.innerText = "Hide";
            } else {
                block.style.display = "none";
                btn.innerText = "Show more";
            }
        }
    </script>
    <script>
        function toggleDetails(btn) {
            var block = btn.nextElementSibling;
            if (block.style.display === "none" || block.style.display === "") {
                block.style.display = "block";
                btn.innerText = "Hide";
            } else {
                block.style.display = "none";
                btn.innerText = "Show more";
            }
        }
        // По умолчанию скрывать все details-content
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".details-content").forEach(function (block) {
                block.style.display = "none";
            });
        });
    </script>
</head>

<body>
    <h1>BeeScan Report</h1>

    {% set scan_target = config["scan_config"].get("target_domain", "") %}
    {% set resolved_ip = config["scan_config"].get("target_ip", "") %}

    <div class="module">
        {% if resolved_ip %}
        <p><strong>IP:</strong> {{ resolved_ip }}</p>
        {% endif %}
        {% if scan_target %}
        <p><strong>Domain:</strong> {{ scan_target }}</p>
        {% endif %}
        <p><strong>Time:</strong> {{ meta.created_at or "Unknown" }}</p>
    </div>

    {# Перебираем категории и модули (плагины) #}
    {% for category, modules in structured_results.items() %}
    <div class="module">
        <h2>{{ category }}</h2>
        {% for module_name, entries in modules.items() %}
        {% set template_path = "plugins/" ~ module_name ~ ".html.j2" %}
        {% include template_path ignore missing %}
        {% endfor %}
    </div>
    {% endfor %}

    <div class="footer">
        Generated by BeeScan
    </div>
</body>

</html>